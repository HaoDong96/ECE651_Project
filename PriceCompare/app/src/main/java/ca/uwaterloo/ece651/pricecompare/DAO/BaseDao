// author: Dan Wang
// all DAO should extends from BaseDao to save time to create duplicate connection, etc..

public class BaseDao{
    private static String driver = "com.mysql.jdbc.Driver";
    private static String url = "jdbc:mysql://localhost:3306/mydb";
    //seems not a good way to give the credentials...
    private static String user = "root";
    private static String password = "root";

    static {
        try{
            Class.forName(driver);
        } catch (ClassNotFoundException e) {
            e.printStackTrace();
        }
    }

    public static Connection getConnection() throws SQLException {
        return DriverManager.getConnection(url, user, password);
    }

    public static void closeAll(Connection conn, Statement stmt, ResultSet rs) throws SQLException{
        if (rs != null) {
            rs.close();
        }
        if (stmt != null) {
            stmt.close();
        }
        if (conn != null) {
            conn.close();
        }
    }

    public int executeSQL(String prepareSql, Object[] param) throws ClassNotFoundException {
        Connection conn = null;
        PreparedStatement pstmt = null;

        try {
            conn = getConnection(); //get connnection to database
            pstmt = conn.prepareStatement(prepareSql); //get PrepareStatement instance
            if (param != null) {
                for (int i = 0; i < param.length; i++) {
                    pstmt.setObject(i + 1, param[i]); //set parameter for precompiling sql
                }
            }
            ResultSet num = pstmt.executeQuery(); // execute sql
        } catch (SQlException e) {
            e.printStackTrace();
        } finally {
           try {
               BaseDao.closeAll(conn, pstmt, null);
           } catch (SQLException e) {
               e.printStackTrace();
           }
        }
        return 0;
    }
}